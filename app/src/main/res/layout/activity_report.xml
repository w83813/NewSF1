<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".ViewReport">

    <LinearLayout
        android:id="@+id/report_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/underline">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_marginBottom="2dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/reportlogo" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/Report"
                    android:textAlignment="center"
                    android:textColor="@color/colorMediumblue"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:text="@string/Report_Info"
                    android:textColor="@android:color/black"
                    android:textSize="8sp" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvname"
                        android:layout_width="20dp"
                        android:layout_height="12dp"
                        android:gravity="center|left"
                        android:text="@string/Report_name"
                        android:textColor="#000000"
                        android:textSize="5sp" />

                    <TextView
                        android:id="@+id/tvnumber"
                        android:layout_width="20dp"
                        android:layout_height="12dp"
                        android:gravity="center|left"
                        android:text="ID : "
                        android:textColor="#000000"
                        android:textSize="5sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/report_name"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:gravity="center_vertical"
                        android:textColor="#000000"
                        android:textSize="5sp" />

                    <TextView
                        android:id="@+id/report_id"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:gravity="center_vertical"
                        android:textColor="#000000"
                        android:textSize="5sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvphone"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:gravity="center"
                        android:text="@string/Report_check_date"
                        android:textColor="#000000"
                        android:textSize="5sp" />

                    <TextView
                        android:id="@+id/tvphone2"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:gravity="center"
                        android:text="@string/Report_report_date"
                        android:textColor="#000000"
                        android:textSize="5sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/report_checktime"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:gravity="center_vertical"
                        android:textColor="#000000"
                        android:textSize="5sp" />

                    <TextView
                        android:id="@+id/report_date"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:gravity="center_vertical"
                        android:textColor="#000000"
                        android:textSize="5sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/underline"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="20dp"
                    android:layout_height="12dp"
                    android:gravity="center|left"
                    android:text="@string/Report_age"
                    android:textColor="#000000"
                    android:textSize="5sp" />

                <TextView
                    android:id="@+id/report_age"
                    android:layout_width="30dp"
                    android:layout_height="12dp"
                    android:gravity="center_vertical"
                    android:text="123"
                    android:textColor="#000000"
                    android:textSize="5sp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="20dp"
                    android:layout_height="12dp"
                    android:gravity="center|left"
                    android:text="@string/Report_gender"
                    android:textColor="#000000"
                    android:textSize="5sp" />

                <TextView
                    android:id="@+id/report_gender"
                    android:layout_width="30dp"
                    android:layout_height="12dp"
                    android:gravity="center_vertical"
                    android:text="123"
                    android:textColor="#000000"
                    android:textSize="5sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="20dp"
                    android:layout_height="12dp"
                    android:gravity="center"
                    android:text="@string/Report_phone"
                    android:textColor="#000000"
                    android:textSize="5sp" />

                <TextView
                    android:id="@+id/report_phonenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:textSize="5sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/report_framelayout1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/report_image1"
                            android:layout_width="match_parent"
                            android:layout_height="127.5dp"
                            android:layout_marginTop="1pt"
                            android:layout_marginRight="1pt"
                            android:layout_marginBottom="1pt"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:cropToPadding="true"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/circleborder1"
                            android:layout_width="match_parent"
                            android:layout_height="128.5dp"
                            android:layout_marginTop="1pt"
                            android:layout_marginRight="1pt"
                            android:layout_marginBottom="1pt"
                            android:adjustViewBounds="true"
                            android:cropToPadding="true"
                            android:hardwareAccelerated="false"
                            android:largeHeap="true"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/imgnum1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:visibility="visible" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/report_framelayout2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/report_image2"
                            android:layout_width="match_parent"
                            android:layout_height="127.5dp"
                            android:layout_marginTop="1pt"
                            android:layout_marginRight="1pt"
                            android:layout_marginBottom="1pt"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:cropToPadding="true"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/circleborder2"
                            android:layout_width="match_parent"
                            android:layout_height="128.5dp"
                            android:layout_marginTop="1pt"
                            android:layout_marginRight="1pt"
                            android:layout_marginBottom="1pt"
                            android:adjustViewBounds="true"
                            android:cropToPadding="true"
                            android:hardwareAccelerated="false"
                            android:largeHeap="true"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/imgnum2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:visibility="visible" />
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/report_framelayout3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/report_image3"
                            android:layout_width="match_parent"
                            android:layout_height="127.5dp"
                            android:layout_marginTop="1pt"
                            android:layout_marginRight="1pt"
                            android:layout_marginBottom="1pt"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:cropToPadding="true"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/circleborder3"
                            android:layout_width="match_parent"
                            android:layout_height="128.5dp"
                            android:layout_marginTop="1pt"
                            android:layout_marginRight="1pt"
                            android:layout_marginBottom="1pt"
                            android:adjustViewBounds="true"
                            android:cropToPadding="true"
                            android:hardwareAccelerated="false"
                            android:largeHeap="true"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/imgnum3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:visibility="visible" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/report_framelayout4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/report_image4"
                            android:layout_width="match_parent"
                            android:layout_height="127.5dp"
                            android:layout_marginTop="1pt"
                            android:layout_marginRight="1pt"
                            android:layout_marginBottom="1pt"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:cropToPadding="true"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/circleborder4"
                            android:layout_width="match_parent"
                            android:layout_height="128.5dp"
                            android:layout_marginTop="1pt"
                            android:layout_marginRight="1pt"
                            android:layout_marginBottom="1pt"
                            android:adjustViewBounds="true"
                            android:cropToPadding="true"
                            android:hardwareAccelerated="false"
                            android:largeHeap="true"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/imgnum4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:visibility="visible" />
                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_memo1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/reportmemoborder"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="MEMO1"
                        android:textColor="@android:color/black"
                        android:textSize="5sp" />

                    <TextView
                        android:id="@+id/report_memo1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/reportmemoborder"
                        android:gravity="center|left"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="#000000"
                        android:textSize="5sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_memo2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/reportmemoborder"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="MEMO2"
                        android:textColor="@android:color/black"
                        android:textSize="5sp" />

                    <TextView
                        android:id="@+id/report_memo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/reportmemoborder"
                        android:gravity="center|left"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="#000000"
                        android:textSize="5sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_memo3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/reportmemoborder"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="MEMO3"
                        android:textColor="@android:color/black"
                        android:textSize="5sp" />

                    <TextView
                        android:id="@+id/report_memo3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/reportmemoborder"
                        android:gravity="center|left"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="#000000"
                        android:textSize="5sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_memo4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/viewRepText3"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/reportmemoborder"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="MEMO4"
                        android:textColor="@android:color/black"
                        android:textSize="5sp" />

                    <TextView
                        android:id="@+id/report_memo4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/reportmemoborder"
                        android:gravity="center|left"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="#000000"
                        android:textSize="5sp" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:text="@string/Report_Doctor"
                android:textColor="@android:color/black"
                android:textSize="6sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/save_pdf"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/primary_button"
            android:text="@string/Save"
            android:textColor="@color/colorWhite"
            android:textSize="12dp" />

        <Button
            android:id="@+id/view_pdf"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/primary_button"
            android:text="@string/Print"
            android:textColor="@color/colorWhite"
            android:textSize="12dp" />

        <Button
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/primary_button"
            android:text="@string/Share"
            android:textColor="@color/colorWhite"
            android:textSize="12dp" />

        <Button
            android:id="@+id/cancelViewreport"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/primary_button"
            android:text="@string/Check_finish"
            android:textColor="@color/colorWhite"
            android:textSize="12dp" />
    </LinearLayout>

</RelativeLayout>